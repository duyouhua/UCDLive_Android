<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.ucloud.ulive.widget.UAspectFrameLayout
        android:id="@+id/container"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.ucloud.ulive.widget.UAspectFrameLayout>

    <include layout="@layout/live_layout_live_room_controller_pannel"></include>

    <include layout="@layout/live_layout_live_room_record_finish_pannel"></include>

    <include layout="@layout/live_layout_live_room_filter_pannel"/>

    <ImageView
        android:layout_gravity="right|top"
        android:layout_margin="5dp"
        android:id="@+id/takescreenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>